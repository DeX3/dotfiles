while [[ $# -gt 1 ]]
do
    key="$1"

    case $key in
        -h|--help)
            echo "Usage: $0 ..."
            shift
            ;;
        -v|--version)
            echo "v0.0.0"
            shift
            ;;
        *)
            echo "Unknown option: $1"
            exit 1
            ;;
    esac
    shift
done