" vim: set foldmethod=marker

set number
syntax on

set shiftwidth=2
set tabstop=2
set textwidth=0

set autoindent
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set nowrap
set linebreak
set nolist

set expandtab
set smarttab

set modeline

set backup=~/.vim/backup
set directory=~/.vim/tmp

set undofile
set undodir=~/.vim/undo
set undolevels=1000
set undoreload=10000

set noeb
